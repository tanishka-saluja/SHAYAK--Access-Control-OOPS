public class EligibilityEngine {

    public static int calculateScore(WomanEntrepreneur user) {

        int score = 0;

        // Income Criteria
        if (user.getMonthlyIncome() >= 10000)
            score += 30;
        else
            score += 15;

        // Business Experience
        if (user.getYearsInBusiness() >= 3)
            score += 25;
        else
            score += 10;

        // Education Criteria
        score += EducationPolicy.getEducationPoints(user.getEducation());

        return score;
    }

    public static boolean isEligible(int score) {
        return score >= 60; // Fixed Public Threshold
    }
}
